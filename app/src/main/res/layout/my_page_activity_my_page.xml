<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myPage.MyPageActivity"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_user_info"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/my_page_top_gradient"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="마이페이지"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/happiness_sans_bold"
                android:textSize="17.5sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/mypage_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/my_page_top"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="22.5sp"
            android:text="황수연님"
            android:fontFamily="@font/happiness_sans_regular"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mypage_user_name"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:fontFamily="@font/happiness_sans_regular"
            android:textColor="@color/white"
            android:text="안녕하세요"
            android:textSize="22.5sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mypage_button_logout"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/my_page_logout_button"
            android:text="로그아웃"
            android:textSize="12sp"
            android:fontFamily="@font/happiness_sans_regular"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_user_name"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_H_pass"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_user_info"
        android:background="@drawable/new_product_user_history"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="H Pass"
            android:fontFamily="@font/happiness_sans_title"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독관리"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/happiness_sans_regular"
            android:textSize="14sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_page_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정"
        app:layout_constraintTop_toBottomOf="@id/my_page_H_pass"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/happiness_sans_title"
        android:textColor="@color/grey"
        android:textSize="20sp"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/my_page_only_bottom_line"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_id_text"
    >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_page_user_icon"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/my_page_user_info_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@android:color/transparent"
            android:text="회원 정보"
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_bold"
            android:textAlignment="textStart"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_page_booking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약"
        app:layout_constraintTop_toBottomOf="@id/my_page_user_info_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/happiness_sans_title"
        android:textColor="@color/grey"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_popup"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/my_page_only_bottom_line"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_booking_text"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_page_popup_icon"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/my_page_popup_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@android:color/transparent"
            android:text="팝업 스토어"
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_bold"
            android:textAlignment="textStart"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_new_prod"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/my_page_only_bottom_line"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_popup"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_page_new_prod_icon"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/my_page_new_prod_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@android:color/transparent"
            android:text="신제품 체험"
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_bold"
            android:textAlignment="textStart"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_page_sale_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할인"
        app:layout_constraintTop_toBottomOf="@id/my_page_new_prod"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/happiness_sans_title"
        android:textColor="@color/grey"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_coupon"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/my_page_only_bottom_line"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_sale_text"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_page_coupon_icon"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/my_page_coupon_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@android:color/transparent"
            android:text="나의 쿠폰"
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_bold"
            android:textAlignment="textStart"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_page_event_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트"
        app:layout_constraintTop_toBottomOf="@id/my_page_coupon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/happiness_sans_title"
        android:textColor="@color/grey"
        android:textSize="20sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/my_page_only_bottom_line"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_event_text"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_page_today_store_icon"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/my_page_today_store_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@android:color/transparent"
            android:text="오늘의 매장"
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_bold"
            android:textAlignment="textStart"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>