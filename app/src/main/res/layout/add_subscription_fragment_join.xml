<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_subs_join_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="H.Pass 가입"
            android:gravity="center"
            android:fontFamily="@font/happiness_sans_bold"
            android:textSize="17.5sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/subs_join_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H.Pass"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_subs_join_top" />

    <TextView
        android:id="@+id/subs_join_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="월 4,500원"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/subs_join_title"
        app:layout_constraintTop_toBottomOf="@+id/subs_join_title" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="(VAT 포함)"
        android:textColor="@color/grey"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/subs_join_price"
        app:layout_constraintStart_toEndOf="@+id/subs_join_price"
        app:layout_constraintTop_toTopOf="@+id/subs_join_price" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/benefit_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/subscription_condition"
        android:paddingHorizontal="13dp"
        android:paddingVertical="13dp"
        app:layout_constraintTop_toBottomOf="@+id/subs_join_price"
        tools:layout_editor_absoluteX="19dp">

        <TextView
            android:id="@+id/benefit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_product_user_history"
            android:fontFamily="@font/happiness_sans_bold"
            android:gravity="center"
            android:paddingHorizontal="13dp"
            android:paddingVertical="4dp"
            android:text="혜택 1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="H.Point 추가 적립"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/benefit_1"
            app:layout_constraintTop_toTopOf="@+id/benefit_1" />

        <TextView
            android:id="@+id/benefit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/new_product_user_history"
            android:fontFamily="@font/happiness_sans_bold"
            android:gravity="center"
            android:paddingHorizontal="13dp"
            android:paddingVertical="4dp"
            android:text="혜택 2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/benefit_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="팝업 스토어 선예매"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/benefit_2"
            app:layout_constraintTop_toTopOf="@+id/benefit_2" />

        <TextView
            android:id="@+id/benefit_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/new_product_user_history"
            android:fontFamily="@font/happiness_sans_bold"
            android:gravity="center"
            android:paddingHorizontal="13dp"
            android:paddingVertical="4dp"
            android:text="혜택 3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/benefit_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="구독자 전용 할인쿠폰 발급"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/benefit_3"
            app:layout_constraintTop_toTopOf="@+id/benefit_3" />

        <TextView
            android:id="@+id/benefit_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/new_product_user_history"
            android:fontFamily="@font/happiness_sans_bold"
            android:gravity="center"
            android:paddingHorizontal="13dp"
            android:paddingVertical="4dp"
            android:text="혜택 4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/benefit_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="전시 및 문화센터 할인"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/benefit_4"
            app:layout_constraintTop_toTopOf="@+id/benefit_4" />

        <TextView
            android:id="@+id/benefit_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/new_product_user_history"
            android:fontFamily="@font/happiness_sans_bold"
            android:gravity="center"
            android:paddingHorizontal="13dp"
            android:paddingVertical="4dp"
            android:text="혜택 5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/benefit_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="자체 브랜드 신제품 체험단 기회"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/benefit_5"
            app:layout_constraintTop_toTopOf="@+id/benefit_5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/agreement_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/subs_join_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/benefit_box">

        <CheckBox
            android:id="@+id/checkbox_all"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/subscription_join_checkbox_all"
            android:button="@android:color/transparent"
            android:checked="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="모두 동의합니다."
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/checkbox_all"
            app:layout_constraintStart_toEndOf="@+id/checkbox_all"
            app:layout_constraintTop_toTopOf="@+id/checkbox_all" />

        <View
            android:id="@+id/checkbox_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:background="#C6C5C5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox_all" />

        <CheckBox
            android:id="@+id/checkbox_1"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/subscription_join_checkbox"
            android:button="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@+id/checkbox_all"
            app:layout_constraintTop_toBottomOf="@id/checkbox_line" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(필수) 멤버십 정기결제 동의"
            android:textColor="@color/textGray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/checkbox_1"
            app:layout_constraintStart_toStartOf="@id/text_all"
            app:layout_constraintTop_toTopOf="@+id/checkbox_1" />

        <CheckBox
            android:id="@+id/checkbox_2"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/subscription_join_checkbox"
            android:button="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@+id/checkbox_all"
            app:layout_constraintTop_toBottomOf="@id/checkbox_1" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(필수) H.Pass 멤버십 이용약관"
            android:textColor="@color/textGray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/checkbox_2"
            app:layout_constraintStart_toStartOf="@id/text_all"
            app:layout_constraintTop_toTopOf="@+id/checkbox_2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_2"
            app:layout_constraintEnd_toEndOf="@+id/checkbox_line"
            app:layout_constraintTop_toTopOf="@id/checkbox_2" />

        <CheckBox
            android:id="@+id/checkbox_3"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/subscription_join_checkbox"
            android:button="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@+id/checkbox_all"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(선택) 광고성 정보 수신 동의"
            android:textColor="@color/textGray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/checkbox_3"
            app:layout_constraintStart_toStartOf="@id/text_all"
            app:layout_constraintTop_toTopOf="@+id/checkbox_3" />

        <CheckBox
            android:id="@+id/checkbox_4"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/subscription_join_checkbox"
            android:button="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@+id/checkbox_all"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_3" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(필수) 결제 및 멤버십 유의사항"
            android:textColor="@color/textGray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/checkbox_4"
            app:layout_constraintStart_toStartOf="@id/text_all"
            app:layout_constraintTop_toTopOf="@+id/checkbox_4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="정기 구독 결제는 한달마다 자동으로 갱신됩니다.\n구독이 만료되기 24시간 전에 해당 금액이 청구됩니다."
            android:textColor="@color/textGray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/checkbox_4"
            app:layout_constraintTop_toBottomOf="@id/checkbox_4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/subs_join_btn"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/subscription_join_button"
        android:text="구독하기"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>