<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_round"
    android:paddingBottom="15dp">
    <ImageView
        android:id="@+id/store_map_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/store_map_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1F Exclusive Label"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/store_map_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/happiness_sans_title"
        android:textSize="26sp"
        android:textAlignment="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/store_map_button"
        android:text="확인"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/happiness_sans_bold"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/store_map_floor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/new_product_user_gradient_background"
        android:layout_margin="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>