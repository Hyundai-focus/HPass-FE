<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popUpStoreTitleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popUpStoreTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="POP UP Info"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/happiness_sans_title"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            />

        <TextView
            android:id="@+id/popUpStoreMoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clear"
            android:text="더보기 >"
            android:fontFamily="@font/happiness_sans_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popUpStoreList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/subscription_main_popup_item"
        />

</LinearLayout>


