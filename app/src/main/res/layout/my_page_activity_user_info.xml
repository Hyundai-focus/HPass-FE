<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_user_info_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="회원정보"
            android:gravity="center"
            android:fontFamily="@font/happiness_sans_bold"
            android:textSize="17.5sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_page_user_info_top"
        android:background="@drawable/new_product_user_history"
        android:backgroundTint="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:clipToOutline="true"
        android:elevation="1dp"
        >
        <TextView
            android:id="@+id/my_page_user_profile_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_page_detail_top_radius"
            android:text="프로필"
            android:padding="14dp"
            android:fontFamily="@font/happiness_sans_regular"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_user_name_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/my_page_only_bottom_line"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_user_profile_top"
            >
            <ImageView
                android:id="@+id/user_detail_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/my_page_user_icon"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/my_page_user_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="황수연"
                app:layout_constraintStart_toEndOf="@id/user_detail_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/happiness_sans_bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_user_email_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/my_page_only_bottom_line"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_user_name_layout"
            >
            <ImageView
                android:id="@+id/user_email_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/my_page_email_icon"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/my_page_user_detail_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address@naver.com"
                app:layout_constraintStart_toEndOf="@id/user_email_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/happiness_sans_bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_user_check_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/my_page_user_email_layout"
            >
            <ImageView
                android:id="@+id/user_check_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/my_page_check_icon"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/my_page_user_detail_subs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구독중"
                app:layout_constraintStart_toEndOf="@id/user_check_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/happiness_sans_bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>