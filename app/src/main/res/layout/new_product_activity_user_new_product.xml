<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/new_product_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="황수연님의"
        android:fontFamily="@font/happiness_sans_bold"
        android:layout_marginTop="75dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/product_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_product_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="35sp"
        android:text="신청  제품"
        android:fontFamily="@font/happiness_sans_title"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/new_product_layout"
        android:layout_width="250dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/product_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/new_product_outline"
        android:clipToOutline="true"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/new_product_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@drawable/new_product_outline"
            android:clipToOutline="true"
            android:layout_margin="11dp"
            />
        <TextView
            android:id="@+id/new_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/new_product_img"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:text="Re X Re"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/happiness_sans_title"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/new_product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/new_product_title"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="17sp"
            android:text="리바이리 소듐 미네랄 엠플"
            android:fontFamily="@font/happiness_sans_bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/place_textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2.5dp"
            android:text="수령 기간 :  "
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_regular"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/new_product_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/time_textView"
            app:layout_constraintTop_toTopOf="@id/time_textView"
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_regular"
            android:textSize="12sp"
            android:text="2024.02.02 12:00"/>

        <TextView
            android:id="@+id/place_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수령 장소 :  "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/happiness_sans_regular"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/new_product_user_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/place_textView"
            app:layout_constraintTop_toTopOf="@id/place_textView"
            android:textColor="@color/grey"
            android:fontFamily="@font/happiness_sans_regular"
            android:textSize="12sp"
            android:text="더현대 서울 1F 컨시어지"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_product_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="수령 기간 내 해당 제품을 수령해주세요"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:fontFamily="@font/happiness_sans_bold"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/new_product_cancel_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/new_product_button_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="15dp"
        android:background="@drawable/new_product_user_cancel_button"
        android:textColor="@color/dark_green"
        android:text="신청 취소하기"
        android:textSize="15sp"
        android:fontFamily="@font/happiness_sans_bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/new_product_button_ok"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:text="확인"
        android:textSize="15sp"
        android:fontFamily="@font/happiness_sans_bold"
        android:textColor="@color/white"
        android:background="@drawable/new_product_user_gradient_background"
        />
</androidx.constraintlayout.widget.ConstraintLayout>