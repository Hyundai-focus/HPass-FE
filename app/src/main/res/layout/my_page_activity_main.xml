<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/my_page_top"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintDimensionRatio="H,648:475"
    android:src="@drawable/my_page_too_img"/>
    <TextView
        android:id="@+id/my_page_user_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="홍길동님"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="101dp"
        android:layout_marginTop="89dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_page_top"
        android:background="#181A19"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="119dp"
        android:layout_marginStart="101dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_page_top"
        android:background="#181A19"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H.Point"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/my_page_top"
        android:background="@color/white"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_my_page_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_top">
        <Button
            android:id="@+id/my_page_subs_button"
            android:layout_width="700dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-100dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="H.Pass"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/mypage_user_status_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="구독중"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shape_corner_round"
            android:backgroundTint="#CAE5DC"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:id="@+id/mypage_user_status_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="구독하기"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="11dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_top"
        android:background="@color/lightGray"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_my_page_layout"
        android:src="@drawable/my_page_bottom_img"
        app:layout_constraintDimensionRatio="H,648:1218"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/my_page_bottom_bar"
        app:layout_constraintDimensionRatio="H,648:200"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/button_to_home"
        android:layout_width="90dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/transparent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>