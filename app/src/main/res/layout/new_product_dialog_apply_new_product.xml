<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="310dp"
    android:background="@drawable/new_product_user_history"
    android:clipToOutline="true"
    android:backgroundTint="@color/white">
    <ImageView
        android:id="@+id/new_product_chosen_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/new_product_apply_button"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/new_product_dialog_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:id="@+id/new_product_chosen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/new_product_chosen_img"
        app:layout_constraintBottom_toTopOf="@id/new_product_chosen_subtitle"
        android:text="Re X Re"
        android:fontFamily="@font/happiness_sans_bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/white"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/new_product_chosen_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/new_product_chosen_img"
        app:layout_constraintBottom_toBottomOf="@id/new_product_chosen_img"
        android:textSize="17sp"
        android:text="리바이리 소듐 미네랄 엠플"
        android:fontFamily="@font/happiness_sans_regular"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_product_chosen_img"
        app:layout_constraintBottom_toTopOf="@id/new_product_apply_button"
        android:text="신청 시 더현대 서울에서 직접 수령하셔야 합니다"
        android:fontFamily="@font/happiness_sans_regular"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/new_product_apply_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/new_product_apply_button"
        android:layout_marginBottom="10dp"
        android:text="신청하기"
        android:fontFamily="@font/happiness_sans_bold"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>